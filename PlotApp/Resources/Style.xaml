<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="DataGrid" x:Key="DefaultDataGrid">
        <!--<Setter Property="FontFamily" Value="{StaticResource MuktaRegular}"></Setter>-->
        <Setter Property="AutoGenerateColumns" Value="True"></Setter>
        <Setter Property="CanUserAddRows" Value="True"></Setter>
        <Setter Property="CanUserDeleteRows" Value="True"></Setter>
        <Setter Property="SelectionUnit" Value="FullRow"></Setter>
        <Setter Property="SelectionMode" Value="Extended"></Setter>

        <Setter Property="CanUserReorderColumns" Value="False"></Setter>
        <Setter Property="CanUserSortColumns" Value="False"></Setter>
        <Setter Property="CanUserResizeColumns" Value="False"></Setter>
        <Setter Property="CanUserResizeRows" Value="False"></Setter>
        <Setter Property="IsReadOnly" Value="False"></Setter>

        <Setter Property="Margin" Value="10"></Setter>
        <Setter Property="FontSize" Value="16"></Setter>

        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <!--<Setter Property="ColumnHeaderStyle" Value="{StaticResource DefaultHeader}"></Setter>-->
    </Style>

</ResourceDictionary>