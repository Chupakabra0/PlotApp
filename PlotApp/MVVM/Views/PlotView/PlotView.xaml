<Window x:Class="PlotApp.MVVM.Views.PlotView.PlotView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlotApp.MVVM.Views.PlotView"
        xmlns:series="clr-namespace:OxyPlot.Series;assembly=OxyPlot"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:plotViewModel="clr-namespace:PlotApp.MVVM.ViewModels.PlotViewModel"
        mc:Ignorable="d"
        Title="PlotView" Height="450" Width="800">

    <Window.DataContext>
        <plotViewModel:PlotViewModel></plotViewModel:PlotViewModel>
    </Window.DataContext>

    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <oxy:PlotView Grid.Column="0" Model="{Binding Path=Model, Mode=TwoWay}">
        </oxy:PlotView>

        <StackPanel Grid.Column="1" Orientation="Vertical"
                    HorizontalAlignment="Center" VerticalAlignment="Center">

            <ListView ItemsSource="{Binding Path=Functions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="20">

                            <Grid Width="150"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <TextBlock Text="{Binding Path=Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                           FontSize="20"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Center">
                                </TextBlock>

                                <StackPanel Orientation="Horizontal"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Top">

                                    <Button Content="Edit"
                                            Style="{StaticResource DefaultButton}"
                                            HorizontalAlignment="Right">
                                    </Button>

                                    <Button Content="Del"
                                            Style="{StaticResource DefaultButton}"
                                            HorizontalAlignment="Right">
                                    </Button>

                                </StackPanel>

                            </Grid>

                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <StackPanel Orientation="Vertical"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">

                                <TextBlock Text="Scale X">
                                </TextBlock>

                                <Slider x:Name="SliderScaleX"
                                        Minimum="0.1" Maximum="10"
                                        Value="1">
                                </Slider>

                                <TextBox Text="{Binding ElementName=SliderScaleX, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <TextBlock Text="Scale Y">
                                </TextBlock>

                                <Slider x:Name="SliderScaleY"
                                        Minimum="0.1" Maximum="10"
                                        Value="1">
                                </Slider>

                                <TextBox Text="{Binding ElementName=SliderScaleY, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <TextBlock Text="Wrap X">
                                </TextBlock>

                                <Slider x:Name="SliderWrapX"
                                        Minimum="-10" Maximum="10"
                                        Value="0">
                                </Slider>

                                <TextBox Text="{Binding ElementName=SliderWrapX, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>

                            </StackPanel>

                            <StackPanel Orientation="Vertical"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                <TextBlock Text="Wrap Y">
                                </TextBlock>

                                <Slider x:Name="SliderWrapY"
                                        Minimum="-10" Maximum="10"
                                        Value="0">
                                </Slider>

                                <TextBox Text="{Binding ElementName=SliderWrapY, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                </TextBox>

                            </StackPanel>


                            <!--<TextBox Text="{Binding Path=ScaleX, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            </TextBox>-->

                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Content="Add"
                    Style="{StaticResource DefaultButton}"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    Command="{Binding Path=AddPlotCommand}">
            </Button>

        </StackPanel>

    </Grid>

</Window>
